genrule(
    name  = "__output.ml__",
    srcs  = [
        "hello.txt",
        "world.txt",
        "//rules/with-stdout-to/cat/glob/morefiles:test.txt"
    ],
    outs  = [
        "output.ml"
    ],
    cmd   = " ".join([
        "cat",
        "$(location hello.txt)",
        "$(location world.txt)",
        "$(location //rules/with-stdout-to/cat/glob/morefiles/test.txt)",
        "> $@"
    ]),
)
