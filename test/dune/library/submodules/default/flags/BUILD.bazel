load("@rules_ocaml//build:rules.bzl",
     "ocaml_ns_archive",
     "ocaml_module",
)

package(default_visibility = ["//visibility:public"])

LIB_WFLAGS_OPTS = [
        "-linkall"
]

#############################
####  Aggregate Targets  ####

#################
ocaml_ns_archive(
    name       = "lib_wflags",
    submodules = [
        ":A",
        ":B"
    ],
    opts       = ["-linkall"],
)

#############################
####  Singleton Targets  ####

ocaml_module(
    name          = "A",
    struct        = "a.ml",
    sig           = "a.mli",
    opts          = LIB_WFLAGS_OPTS,
)

ocaml_module(
    name          = "B",
    struct        = "b.ml",
    opts          = LIB_WFLAGS_OPTS,
)

