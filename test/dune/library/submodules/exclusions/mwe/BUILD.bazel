load("@rules_ocaml//build:rules.bzl",
     "ocaml_ns_archive",
     "ocaml_module",
)

package(default_visibility = ["//visibility:public"])

LIB_MWE_OPTS = [
        "-linkall"
]

#############################
####  Aggregate Targets  ####

#################
ocaml_ns_archive(
    name       = "lib_mwe",
    submodules = [
        ":A",
        ":C",
        ":D",
        ":Gen"
    ],
    opts       = ["-linkall"],
)

#############################
####  Singleton Targets  ####

ocaml_module(
    name          = "A",
    struct        = "a.ml",
    sig           = "a.mli",
    opts          = LIB_MWE_OPTS,
)

ocaml_module(
    name          = "C",
    struct        = "c.ml",
    opts          = LIB_MWE_OPTS,
)

ocaml_module(
    name          = "D",
    struct        = "d.ml",
    sig           = "d.mli",
    opts          = LIB_MWE_OPTS,
)

ocaml_module(
    name          = "Gen",
    struct        = "gen.ml",
    opts          = LIB_MWE_OPTS,
)

